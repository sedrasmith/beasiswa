<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tutoial"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="o.astra1st.TutoialActivity"
    android:background="#ECEFF1">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginBottom="8dp" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/lampu_kotak"
                        android:id="@+id/imageView5"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:text="Lingkungan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/imageView5"
                        android:layout_toEndOf="@+id/imageView5"
                        android:id="@+id/textView3"
                        android:textSize="22sp"
                        android:textColor="#3b444b"
                        android:layout_marginLeft="8dp" />

                    <TextView
                        android:text="Pastikan anda berada pada tempat yang hening dan memiliki pencahayaan yang cukup sehingga rekaman dapat terlihat dan terdengar dengan jelas."
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView4"
                        android:layout_alignLeft="@+id/textView3"
                        android:layout_alignStart="@+id/textView3"
                        android:layout_below="@+id/textView3"
                        android:layout_marginRight="8dp"
                        android:textSize="13sp" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginBottom="8dp" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/wifi_kotak"
                        android:id="@+id/imageView6"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_width="130dp"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:text="Konektivitas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/imageView6"
                        android:layout_toEndOf="@+id/imageView6"
                        android:id="@+id/textView5"
                        android:layout_marginLeft="8dp"
                        android:textSize="22sp"
                        android:textColor="#3b444b" />

                    <TextView
                        android:text="Pastikan anda memiliki koneksi internet yang baik, disarankan terhubung dengan jaringan Wi-Fi agar pengunggahan video tidak memakan waktu yang lama"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView6"
                        android:textSize="13sp"
                        android:layout_below="@+id/textView5"
                        android:layout_alignLeft="@+id/textView5"
                        android:layout_alignStart="@+id/textView5"
                        android:layout_marginRight="8dp" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginBottom="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:text="Pakaian"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView"
                        android:layout_alignParentTop="false"
                        android:layout_marginTop="0dp"
                        android:layout_toRightOf="@+id/imageView"
                        android:layout_toEndOf="@+id/imageView"
                        android:layout_marginLeft="9dp"
                        android:textSize="22sp"
                        android:textColor="#3b444b"
                        android:paddingTop="0dp" />

                    <TextView
                        android:text="Anda diwajibkan untuk menggunakan kemeja dan dasi saat melakukan wawancara ini. Pastikan baju anda rapih selama wawancara ini berlangsung."
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView2"
                        android:textAlignment="textStart"
                        android:layout_below="@+id/textView"
                        android:layout_alignLeft="@+id/textView"
                        android:layout_alignStart="@+id/textView"
                        android:layout_marginRight="8dp"
                        android:textSize="13sp" />

                    <ImageView
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/kemeja_kotak"
                        android:id="@+id/imageView"
                        android:layout_width="130dp"
                        android:scaleType="centerCrop"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />
                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginBottom="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/holder_kotak"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:id="@+id/imageView9"
                        android:layout_width="130dp" />

                    <TextView
                        android:text="Ponsel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/imageView9"
                        android:layout_toEndOf="@+id/imageView9"
                        android:id="@+id/textView7"
                        android:textColor="#3b444b"
                        android:textSize="22sp"
                        android:layout_marginLeft="8dp" />

                    <TextView
                        android:text="Disarankan untuk menggunakan sandaran pada ponsel anda saat proses interview berlangsung. Pastikan baterai ponsel ada cukup untuk melakukan interview."
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView7"
                        android:layout_alignLeft="@+id/textView7"
                        android:layout_alignStart="@+id/textView7"
                        android:id="@+id/textView9"
                        android:textSize="13sp" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginBottom="8dp"
                app:cardBackgroundColor="#3b444b">

                <TextView
                    android:text="Saya telah membaca dan memahami semua persiapan inteview diatas "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView10"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:textAlignment="center"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:textColor="#cfd8dc" />

                <Button
                    android:text="ya"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button2"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="65dp" />
            </android.support.v7.widget.CardView>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
