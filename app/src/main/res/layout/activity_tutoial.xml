<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tutoial"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="o.astra1st.TutoialActivity"
    android:background="#ECEFF1">


    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:srcCompat="@drawable/prev"
        android:layout_marginLeft="41dp"
        android:layout_marginStart="41dp"
        android:background="#00000000"
        android:id="@+id/prev1"
        android:layout_alignTop="@+id/next1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:srcCompat="@drawable/next"
        android:id="@+id/next1"
        android:background="#00000000"
        android:layout_marginRight="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="32dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ViewAnimator
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/animator"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingTop="7dp"
        android:paddingBottom="7dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="7dp"
            android:paddingRight="7dp">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/cardview_tutorial_1"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="0dp"
                    android:paddingRight="0dp"
                    android:paddingTop="0dp"
                    android:paddingBottom="0dp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="210dp"
                        android:id="@+id/frame_1">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:srcCompat="@drawable/coba_1"
                            android:id="@+id/imageView_1"
                            android:scaleType="centerCrop" />

                        <TextView
                            android:text="Pakaian"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/judul_tutorial_1"
                            android:textSize="24sp"
                            android:layout_marginRight="0dp"
                            android:layout_marginLeft="0dp"
                            android:layout_marginTop="0dp"
                            android:textColor="#cfd8dc"
                            android:background="#CC232b2b"
                            android:paddingLeft="10dp"
                            android:layout_gravity="bottom"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp" />

                    </FrameLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/layoutgambar"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:id="@+id/layout_penjelasan">

                        <TextView
                            android:text="Anda diwajibkan untuk menggunakan kemeja, dasi dan jas saat melakukan wawancara ini. Pastikan baju anda rapih selama wawancara ini berlangsung"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/penjelasan_tutorial_1"
                            android:textAlignment="textStart"
                            android:textColor="#455A64"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="6dp"
                            android:lineSpacingExtra="2sp" />

                    </LinearLayout>
                </LinearLayout>

            </android.support.v7.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="7dp"
            android:paddingRight="7dp">

            <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/cardview_tutorial_2"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:paddingTop="0dp"
                android:paddingBottom="0dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="210dp"
                    android:id="@+id/frame_2">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/coba_2"
                        android:id="@+id/imageView_2"
                        android:scaleType="centerCrop" />


                    <TextView
                        android:text="Lingkungan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/judul_tutorial_2"
                        android:textSize="24sp"
                        android:layout_marginRight="0dp"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="0dp"
                        android:textColor="#cfd8dc"
                        android:background="#CC232b2b"
                        android:paddingLeft="10dp"
                        android:layout_gravity="bottom"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp" />

                </FrameLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layoutgambar"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:id="@+id/layout_penjelasan2">

                    <TextView
                        android:text="Pastikan anda berada pada tempat yang hening agar jawaban anda dapat terdengar dan memiliki pencahayaan yang cukup sehingga rekaman dapat terlihat dengan jelas."
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/penjelasan_tutorial_2"
                        android:textAlignment="textStart"
                        android:textColor="#455A64"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="6dp"
                        android:lineSpacingExtra="2sp" />

                </LinearLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="7dp"
            android:paddingRight="7dp">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/cardview_tutorial_3"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:paddingLeft="7dp"
                android:paddingRight="7dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="0dp"
                    android:paddingRight="0dp"
                    android:paddingTop="0dp"
                    android:paddingBottom="0dp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="210dp"
                        android:id="@+id/frame_3">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:srcCompat="@drawable/coba_3"
                            android:id="@+id/imageView_3"
                            android:scaleType="centerCrop" />


                        <TextView
                            android:text="Konektivitas"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/judul_tutorial_3"
                            android:textSize="24sp"
                            android:layout_marginRight="0dp"
                            android:layout_marginLeft="0dp"
                            android:layout_marginTop="0dp"
                            android:textColor="#cfd8dc"
                            android:background="#CC232b2b"
                            android:paddingLeft="10dp"
                            android:layout_gravity="bottom"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp" />

                    </FrameLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/layoutgambar"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:id="@+id/layout_penjelasan_3">

                        <TextView
                            android:text="Pastikan anda memiliki koneksi internet yang baik, disarankan menggunakan Wi-Fi agar pengunggahan video tidak memakan waktu yang lama"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/penjelasan_tutorial_3"
                            android:textAlignment="textStart"
                            android:textColor="#455A64"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="6dp"
                            android:lineSpacingExtra="2sp" />

                    </LinearLayout>
                </LinearLayout>

            </android.support.v7.widget.CardView>
        </LinearLayout>

    </ViewAnimator>

</RelativeLayout>
